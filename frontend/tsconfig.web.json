{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.web.tsbuildinfo",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "paths": {
            "@renderer/*": [
                "./src/renderer/src/*"
            ]
        }
    },
    "include": [
        "src/renderer/src",
        "src/renderer/contexts",
        "src/renderer/stores",
        "src/renderer/lib",
        "src/renderer/App.tsx",
        "src/preload/env.d.ts",
        "src/renderer/main.tsx",
        "src/renderer/components"
    ]
}
