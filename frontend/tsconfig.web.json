{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.web.tsbuildinfo",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "paths": {
            "@renderer/*": [
                "./src/renderer/*"
            ],
            "@features/*": [
                "./src/renderer/features/*"
            ],
            "@store/*": [
                "./src/renderer/store/*"
            ],
            "@lib/*": [
                "./src/renderer/lib/*"
            ]
        }
    },
    "include": [
        "src/renderer",
        "src/preload/env.d.ts"
    ]
}
