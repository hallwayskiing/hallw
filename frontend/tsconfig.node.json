{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true
    },
    "include": [
        "src/main",
        "src/preload",
        "electron.vite.config.mjs"
    ]
}
